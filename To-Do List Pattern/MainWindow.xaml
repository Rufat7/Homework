<Window x:Class="To_Do_List_Pattern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="To-Do List" Height="450" Width="400">

    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition/>
            
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions >
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
         
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="3">
            <Button Content="Add Task" Click="AddTask_Click" Grid.Column="2" Grid.Row="2"/>
            <Button Content="Remove Task" Click="RemoveTask_Click"/>
            <Button Content="Mark as Completed" Click="MarkCompleted_Click"/>
            <TextBox x:Name="taskInputTextBox" Grid.Row="2"  Grid.Column="0" Height="25"/>
            
        </StackPanel>
        <ListBox x:Name="taskListBox" Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="0" Grid.RowSpan="4" />
    </Grid>
</Window>
